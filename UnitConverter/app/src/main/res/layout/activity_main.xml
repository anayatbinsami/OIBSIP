<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="UNIT CONVERTER"
       android:textSize="50sp"
       android:textAlignment="center"
       android:layout_margin="20dp"
       android:padding="10dp"
       />
   <EditText
       android:id="@+id/edit_text"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:minHeight="40dp"
       android:padding="10sp"
       android:inputType="numberDecimal"
       android:background="@drawable/edit_bg"
       android:hint="enter your number" />
    <TextView
        android:id="@+id/result_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:hint="........"
        android:background="@drawable/edit_bg"
        android:minHeight="40dp"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_margin="20dp">

     <Button
         android:id="@+id/centimeterToMeters"
         android:layout_width="match_parent"
         android:layout_height="80dp"
         android:layout_weight="1"
         android:text=" Centimeter to meter"/>
     <Button
         android:id="@+id/meterToCentimeter"
         android:layout_width="match_parent"
         android:layout_height="80dp"
         android:layout_marginLeft="10dp"
         android:layout_weight="1"
         android:text="meter to centimeter"/>



  </LinearLayout>

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_margin="20dp">

     <Button
         android:id="@+id/gramToKilogram"
         android:layout_width="match_parent"
         android:layout_height="80dp"
         android:layout_weight="1"
         android:text=" gram To Kilogram"/>
     <Button
         android:id="@+id/kilogramToGram"
         android:layout_width="match_parent"
         android:layout_height="80dp"
         android:layout_marginLeft="10dp"
         android:layout_weight="1"
         android:text="kilogram to gram"/>



  </LinearLayout>

</LinearLayout>